/* ==========================================================================
   модули для страниц и модификации их
   ========================================================================== */

.video-item
  position relative
  height 0
  padding-bottom 56.25%
  iframe
    position absolute
    top 0
    left 0
    max-width 100%
    max-height 100% 

/* 
   footer
   ========================================================================== */

.page-wrap
  footer-stick($footersize)
  margin 0 auto

#up
  display block
  width: 79px
  height: 36px
  position fixed
  right 40px
  bottom 40px
  cursor pointer
  border 0
  z-index 300
  &:hover
    background-color $c-main 
    


    